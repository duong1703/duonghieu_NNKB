<% include ../layout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
    <% include ../layout/menu.ejs %>
    <!-- SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content">
        <section class="wrapper main-wrapper row">
            <div class="col-xs-12">
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Danh Sách Người Dùng</h1>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tất Cả Người Dùng</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if (response_message && response_message.length > 0) { %>
                                <div class="alert alert-success"><%= response_message %></div>
                            <% } %>
                            <div class="col-xs-12">
                                <!-- User List Table -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ảnh</th>
                                        <th>Họ và Tên</th>
                                        <th>Email</th>
                                        <th>Quyền</th>
                                        <th>Hành Động</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% var id = 0; %>
                                    <% data.forEach(function(item) { id++; %>
                                    <% if (!item.isDeleted) { %>
                                        <tr>
                                            <td><%= id %></td>
                                            <td>
                                                <% if (item.photo) { %>
                                                    <img src="/upload/<%= item.photo %>" alt="Ảnh người dùng" style="width: 50px; height: 50px;">
                                                <% } else { %>
                                                    <span>Không có ảnh</span>
                                                <% } %>
                                            </td>
                                            <td><%= item.fullname %></td>
                                            <td><%= item.email %></td>
                                            <td><%= item.roles.join(', ') %></td> <!-- Hiển thị tất cả quyền -->
                                            <td>
                                                <a href="/admin/user/sua/<%= item._id %>.html">Sửa</a> |
                                                <a href="/admin/user/xoa/<%= item._id %>">Xóa</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    <% }) %>
                                    </tbody>
                                </table>
                                <!-- End User List Table -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows"></div>
</div>
<% include ../layout/footer.ejs %>
